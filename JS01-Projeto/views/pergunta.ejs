<%- include ('partials/header.ejs') %>

<body>
    <!-- importar a arquivo navbar.ejs -->
    <%- include ('partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>

        <form action="/responder" method="POST">
            <h1>Responda</h1>
            <label for="resposta">Resposta:</label>
            <textarea name="corpo" class="form-control" placeholder="Digite sua resposta"></textarea>
            <br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">

            <button type="submit" class="btn btn-primary">Responder</button>
        </form>

        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta =>{ %>
        <br>
        <div class="card">
            <div class="card-body">
                <p><%= resposta.corpo  %></p>
            </div>
        </div>

        <% }) %>

    </div>

</body>
<!-- importar a arquivo footer.ejs -->
<%- include ('partials/footer.ejs') %>